<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="linear_spacing" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="linear_subitem_spacing">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="spinner_dropdownitem">
        <item name="backgroundTint">@color/blue_dialog_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>