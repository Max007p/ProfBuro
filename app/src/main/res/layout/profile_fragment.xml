<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_background_4k_1fps">

        <FrameLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/toNavBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_dehaze_24"
                android:contentDescription="to navbar"
                android:layout_gravity="start|center"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/toSupportPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_contact_support_24"
                android:contentDescription="to navbar"
                android:layout_gravity="end|center"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="ПРОФИ"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/blue_background"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="ТУР"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/red_text"
                    android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/startTest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            android:layout_marginStart="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_background"
            android:fontFamily="@font/rubik_medium"
            android:text="Начать тестирование"
            android:textSize="14sp"
            android:background="@drawable/red_buttons_selector" />

        <Button
            android:id="@+id/seeResults"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="480dp"
            android:layout_marginStart="70dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_background"
            android:fontFamily="@font/rubik_medium"
            android:text="Посмотреть результаты"
            android:textSize="14sp"
            android:background="@drawable/red_buttons_selector"
            android:elevation="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>