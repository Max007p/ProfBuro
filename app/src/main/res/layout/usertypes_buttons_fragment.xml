<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:padding="30dp"
    android:background="@drawable/blue_soft_dialog_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Выберите тип пользователя"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/blue_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Школьник"
            android:background="@drawable/blue_buttons_selector"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/white"
            style="@style/linear_spacing"/>

        <Button
            android:id="@+id/mature"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Взрослый"
            android:background="@drawable/blue_buttons_selector"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/white"
            style="@style/linear_spacing"/>

        <Button
            android:id="@+id/teacher"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Представитель школы"
            android:background="@drawable/blue_buttons_selector"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/white"
            style="@style/linear_spacing"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>